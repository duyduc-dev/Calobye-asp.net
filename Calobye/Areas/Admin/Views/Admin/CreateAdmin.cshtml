@using Calobye.Utils

@{
	ViewBag.Title = "New Admin";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<main id="main" class="main transitrion">
	<div class="pagetitle">
		<h1>New Admin</h1>
		<nav>
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
				<li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Admin</a></li>
				<li class="breadcrumb-item active">New Admin</li>
			</ol>
		</nav>
	</div>
	<section class="section profile">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body pt-3">
						<a href="@Url.Action("Index", "Admin")" class="btn btn-primary">
							<i class="ri-arrow-go-back-line"></i>
						</a>
						<div class="profile-edit pt-3" id="profile-edit">
							@using (Html.BeginForm("CreateAdmin", "Admin", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
							{
								@Html.AntiForgeryToken()
								<div class="row mb-3">
									<label for="avatar" class="col-md-4 col-lg-3 col-form-label">Avatar</label>
									<div class="col-md-8 col-lg-9">
										<img show-preview src="~/Areas/Admin/Assets/img/avatar-admin/default.png" alt="Profile" class="box-shadow">
										<input type="file" preview-image name="avatar" id="avatar" accept="image/*" class="d-none" />
										<div class="pt-2">
											<label for="avatar" class="btn btn-primary btn-sm text-white" title="Upload new profile image">
												<i class="bi bi-upload"></i>
											</label>
											<div clear-preview data-default-avatar="/Areas/Admin/Assets/img/avatar-admin/default.png" class="btn btn-danger btn-sm" title="Remove my profile image">
												<i class="bi bi-trash"></i>
											</div>
										</div>
										<div class="text-danger fs-6">@ViewBag.validateAvatar</div>
									</div>
								</div>
								<div class="row mb-3">
									<label for="firstname" class="col-md-4 col-lg-3 col-form-label">First name</label>
									<div class="col-md-8 col-lg-9">
										<input name="firstname" autocomplete="off" type="text" class="form-control" id="firstname" value="">
										<div class="text-danger fs-6">@ViewBag.validateFirstName</div>
									</div>
								</div>
								<div class="row mb-3">
									<label for="lastname" class="col-md-4 col-lg-3 col-form-label">Last name</label>
									<div class="col-md-8 col-lg-9">
										<input name="lastname" type="text" autocomplete="off" class="form-control" id="lastname" value="">
										<div class="text-danger fs-6">@ViewBag.validateLastName</div>
									</div>
								</div>

								<div class="row mb-3">
									<label for="email" class="col-md-4 col-lg-3 col-form-label">Email</label>
									<div class="col-md-8 col-lg-9">
										<input name="email" autocomplete="off" type="text" class="form-control" id="email" value="">
										<div class="text-danger fs-6">@ViewBag.validateEmail</div>
									</div>
								</div>

								<div class="row mb-3">
									<label for="password" class="col-md-4 col-lg-3 col-form-label">Password</label>
									<div class="col-md-8 col-lg-9">
										<input name="password" autocomplete="off" type="password" class="form-control" id="password" value="">
										<div class="text-danger fs-6">@ViewBag.validatePassword</div>
									</div>
								</div>
								<div class="row mb-3">
									<label for="passwordAgain" class="col-md-4 col-lg-3 col-form-label">Password Again</label>
									<div class="col-md-8 col-lg-9">
										<input name="passwordAgain" autocomplete="off" type="password" class="form-control" id="passwordAgain" value="">
										<div class="text-danger fs-6">@ViewBag.validatePasswordAgain</div>
									</div>
								</div>

								<div class="text-center">
									<button type="submit" class="btn btn-primary">Create New Admin</button>
								</div>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
		
	</section>
</main>

@section styles{
	<link href="~/Areas/Admin/Assets/css/main.css" rel="stylesheet" />
}

@section scripts{
	<script src="~/Assets/lib/slugify.js"></script>
	<script type="module" src="~/Areas/Admin/Assets/js/modules/product.js"></script>
}






