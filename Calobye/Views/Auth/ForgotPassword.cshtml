
@{
    ViewBag.Title = "Quên mật khẩu - Calobye";
}

<section  class="pb-20 bg-slate-50">
	<!-- Begin: login  -->
	<div class="h-full flex justify-center py-10">
		<div class="bg-white border-2 border-white_smoke_2 flex flex-col w-c-md pb-10">
			<!-- Begin: Header login -->
			<div class="flex flex-col">
				<div class="max-w-[350px] w-full mx-auto mt-5 px-5">
					<div class="text-center block font-bold text-[25px] text-black my-5 uppercase">Nhập Email của bạn để yêu cầu</div>
					@using (Html.BeginForm("ForgotPassword", "Auth", FormMethod.Post, new { }))
					{
							<div class="mt-5">
								<div class="text-sm">
									<label for="" class="block basis-2/6 font-semibold mb-2">Email:</label>
									<input type="email"
												 id="email"
												 name="email"
												 class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-red-600 transition-all duration-100 focus:border-rosy_pink block p-2.5 w-full"
												 placeholder="abc@gmail.com"
												 required
												 autocomplete="off" />
									<p class="text-red-500 mt-2 ml-2">@ViewBag.validate</p>
								</div>
							</div>
							<div class="my-2 text-center" style="color: green">
								<span>@ViewBag.password</span>
							</div>
							<div class="w-full flex justify-center">
								<button type="submit" class="w-full sm:w-[50%] font-semibold text-base bg-rose-500 text-white py-4 mt-8 rounded-lg">
									Đặt lại mật khẩu
								</button>
							</div>
					}

					<div class="border-b mt-10 flex items-center pb-2 text-sm">
						<div class="w-1/2 text-center border-r text-judge_grey font-bold">
							<a href="/auth/login">Đăng nhập</a>
						</div>
						<div class="w-1/2 text-center text-rosy_pink font-bold">
							<a href="/auth/register">Đăng ký</a>
						</div>
					</div>
				</div>
			</div>
			<!-- End: Header login -->
		</div>
	</div>
	<!-- End: login  -->
</section>

