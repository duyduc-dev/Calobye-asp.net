@using Calobye.Models
@model List<CATEGORY>

<div data-header-show-all-category=""
		 class="absolute top-[unset] block lg:hidden w-full bg-white transition-all duration-500 translate-y-[-200%] z-[50] opacity-0">
	<div class="flex flex-wrap w-full">
		
		@foreach (var category in Model)
		{
			<div class="flex-1 text-center min-w-1/2 sm:min-w-1/3 border py-2">
				<a href="/category/@category.SLUG" class="w-full block active:text-rosy_pink px-2">@category.TITLE</a>
			</div>
		}
	</div>
</div>
